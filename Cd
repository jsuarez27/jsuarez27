trigger:
  branches:
    include:
      - main

pool:
  vmImage: 'ubuntu-latest'

variables:
  phpVersion: '7.4'

stages:
  - stage: 'Build'
    displayName: 'Construir Proyecto PHP'
    jobs:
      - job: 'Build'
        displayName: 'Instalar Dependencias y Validar C칩digo'
        steps:
          - task: UsePythonVersion@0
            inputs:
              versionSpec: '3.x'
              addToPath: true

          - script: |
              echo "Instalando Composer..."
              curl -sS https://getcomposer.org/installer | php
              php composer.phar install
            displayName: 'Instalar Composer Dependencias'

          - script: |
              echo "Ejecutando PHPUnit Tests..."
              ./vendor/bin/phpunit
            displayName: 'Pruebas Unitarias'

          - script: |
              echo "Ejecutando PHP_CodeSniffer..."
              ./vendor/bin/phpcs --standard=PSR12 src/
            displayName: 'An치lisis de C칩digo'
      
  - stage: 'Deploy'
    displayName: 'Desplegar en Azure App Service'
    dependsOn: 'Build'
    jobs:
      - deployment: 'Deploy'
        displayName: 'Despliegue Continuo en Azure'
        environment: 'production'
        strategy:
          runOnce:
            deploy:
              steps:
                - task: AzureWebApp@1
                  inputs:
                    azureSubscription: '<tu-nombre-de-suscripci칩n>'
                    appType: 'webAppLinux'
                    appName: '<tu-nombre-de-app>'
                    package: '$(System.DefaultWorkingDirectory)/src'
